@{
    ViewData["Title"] = "Productos";
}

@section Estilos {
    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/fixedheader/3.2.2/css/fixedHeader.dataTables.min.css" />

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />

    <!-- Estilos base del proyecto (mismos que Pedidos) -->
    <link rel="stylesheet" href="~/css/usuarios.css" />
    <link rel="stylesheet" href="~/css/redisenopantallas.css" />

    <!-- Select2 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
}

<div class="container page-99" style="margin-top: 100px">
    <!-- Header tipo KPI (igual que Pedidos) -->
    <div class="cc-header shadow-lg rounded-4 p-4 mb-4">
        <div class="d-flex align-items-center gap-3 flex-wrap">
            <div class="d-flex align-items-center gap-3">
                <span class="cc-badge"><i class="fa fa-cubes"></i></span>
                <div>
                    <h2 class="m-0 fw-800">Productos</h2>
                    <small class="text-muted-cc">Gestión y listado de productos</small>
                </div>
            </div>

            <!-- KPIs opcionales -->
            <div class="ms-auto d-flex gap-3 flex-wrap">
                <div class="cc-stat"><div class="label">Cantidad</div><div class="value" id="kpiCantProductos">0</div></div>
                <div class="cc-stat d-none d-md-block"><div class="label">Categorías</div><div class="value" id="kpiCantCategorias">0</div></div>
            </div>
        </div>
    </div>

    <!-- Tabla + Filtros -->
    <div class="row g-4">
        <div class="col-12">
            <div class="card-glass p-3">
                <div class="tabla-wrap position-relative">
                    <!-- Controles top (mismos ids/clases que Pedidos) -->
                    <div class="tabla-controls-top d-flex gap-2 flex-wrap align-items-center">

                        <button class="btn btn-success d-flex align-items-center px-3 py-2" onclick="nuevoProducto()">
                            <i class="fa fa-plus-square me-2"></i> Nuevo Producto
                        </button>


                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle d-flex align-items-center" type="button"
                                    id="btnConfigColsProd" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-cog me-2"></i> Config. Columnas
                            </button>
                            <ul class="dropdown-menu" id="configColumnasMenuProductos" aria-labelledby="btnConfigColsProd"></ul>
                        </div>
                    </div>

                    <!-- Panel de filtros (misma “filter-bar”) -->
                   

                    <!-- Tabla -->
                    <div class="dt-dark-wrap">
                        <table class="dt-dark display nowrap compact" id="grd_Productos" style="width:100%">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Nombre</th>
                                    <th>Categoria</th>
                                    <th>Porc. IVA</th>
                                    <th>Porc. Ganancia</th>
                                    <th>Costo Unitario</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>

                </div><!-- /tabla-wrap -->
                <!-- Botón extra (opcional) abajo -->
            
            </div><!-- /card-glass -->
        </div>
    </div>
</div>

<partial name="~/Views/Utils/Modals.cshtml" />

@section Scripts {
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <!-- DataTables + extensiones -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/fixedheader/3.2.2/js/dataTables.fixedHeader.min.js"></script>

    <!-- Export -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>

    <!-- Select2 -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>

    <!-- Utilidades base -->
    <script src="~/js/site.js"></script>
    <script src="~/js/utils/moment.js"></script>

    <!-- Lógica de Productos (ajusta a tus endpoints) -->
    <script src="~/js/Productos.js?v=2.2"></script>

}
