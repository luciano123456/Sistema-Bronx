@{
    ViewData["Title"] = "Insumos";
}

@section Estilos {
    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/fixedheader/3.2.2/css/fixedHeader.dataTables.min.css" />

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />

    <!-- Select2 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />

    <!-- Tus estilos base -->
    <link rel="stylesheet" href="~/css/usuarios.css" />
    <link rel="stylesheet" href="~/css/redisenopantallas.css" />
    <link rel="stylesheet" href="~/css/Insumos.css?v=1.1" />
}

<div class="container page-99" style="margin-top:100px">
    <!-- ======= HEADER GLASS con KPIs (igual que Productos) ======= -->
    <div class="cc-header shadow-lg rounded-4 p-4 mb-4">
        <div class="d-flex align-items-center gap-3 flex-wrap">
            <div class="d-flex align-items-center gap-3">
                <span class="cc-badge"><i class="fa fa-cubes"></i></span>
                <div>
                    <h2 class="m-0 fw-800">Insumos</h2>
                    <small class="text-muted-cc">Gestión y listado de insumos</small>
                </div>
            </div>

            <!-- KPIs -->
            <div class="ms-auto d-flex gap-3 flex-wrap">
                <div class="cc-stat">
                    <div class="label">Cantidad</div>
                    <div class="value" id="kpiCantInsumos">0</div>
                </div>
                <div class="cc-stat d-none d-md-block">
                    <div class="label">Categorías</div>
                    <div class="value" id="kpiCantCategoriasInsumos">0</div>
                </div>
                <div class="cc-stat d-none d-md-block">
                    <div class="label">Costo total</div>
                    <div class="value" id="kpiSumaCostosInsumos">0,00</div>
                </div>
            </div>
        </div>
    </div>

    <!-- ======= TARJETA TABLA ======= -->
    <div class="card-glass p-3">
        <div class="tabla-wrap position-relative">
            <!-- Controles superiores -->
            <div class="tabla-controls-top d-flex gap-2 flex-wrap align-items-center">

                <a class="btn btn-success btnnuevo d-flex align-items-center px-3 py-2" onclick="nuevoInsumo()">
                    <i class="fa fa-plus-square me-2"></i> Nuevo Insumo
                </a>

                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle d-flex align-items-center" type="button"
                            id="dropdownColumnas" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fa fa-cog me-2"></i> Config. Columnas
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownColumnas" id="configColumnasMenu"></ul>
                </div>
            </div>

            <!-- Tabla (SIN fila .filters; tu JS la clona) -->
            <div class="dt-dark-wrap">
                <table class="display nowrap dt-dark" id="grd_Insumos" style="width:100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Descripcion</th>
                            <th>Precio Costo</th>
                            <th>Porc. de Ganancia</th>
                            <th>Precio Venta</th>
                            <th>Tipo</th>
                            <th>Categoria</th>
                            <th>U. de Medida</th>
                            <th>Proveedor</th>
                            <th>Especificacion</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>

        </div>
    </div>
</div>

<!-- =========================
     MODAL: Editar Insumo
     ========================= -->
<!-- === MODAL INSUMOS (misma estructura/IDs, sólo estilos) === -->
<div class="modal fade" id="modalEdicion" tabindex="-1" role="dialog" aria-labelledby="modalEdicionLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-edicion" role="document">
        <div class="modal-content cc-modal">
            <div class="modal-header colorEncabezado">
                <h5 class="modal-title fw-bold" id="modalEdicionLabel">Editar Insumo</h5>
                <button type="button" class="btn-close custom-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <div class="modal-body">
                <form id="formEditarInsumo" class="row g-3">
                    <input type="text" id="txtId" hidden readonly>
                    <input type="text" class="form-control" id="txtIdProveedor" name="txtIdProveedor" hidden>

                    <!-- Izquierda -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="txtDescripcion" class="form-label" id="lblDescripcion">Descripción (*)</label>
                            <input type="text" class="form-control" id="txtDescripcion" required>
                        </div>

                        <div class="mb-3">
                            <label for="Categorias" class="form-label">Categoría (*)</label>
                            <select id="Categorias" name="select" class="form-control">
                                <option value="" selected>Categoría</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="Proveedores" class="form-label">Proveedor (*)</label>
                            <select id="Proveedores" name="select" class="form-control">
                                <option value="" selected>Proveedor</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="UnidadesDeMedidas" class="form-label">U. de Medida (*)</label>
                            <select id="UnidadesDeMedidas" name="select" class="form-control">
                                <option value="" selected>U. de Medida</option>
                            </select>
                        </div>

                        <div class="mb-0">
                            <label for="Tipos" class="form-label">Tipo (*)</label>
                            <select id="Tipos" name="select" class="form-control">
                                <option value="" selected>Tipo</option>
                            </select>
                        </div>
                    </div>

                    <!-- Derecha -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="txtPrecioCosto" class="form-label" id="lblPrecioCosto">Precio Costo (*)</label>
                            <input type="text" class="form-control" id="txtPrecioCosto" required>
                        </div>

                        <div class="mb-3">
                            <label for="txtPorcGanancia" class="form-label" id="lblPorcGanancia">Porc. Ganancia (*)</label>
                            <input type="number" class="form-control" id="txtPorcGanancia" required>
                        </div>

                        <div class="mb-3">
                            <label for="txtPrecioVenta" class="form-label" id="lblPrecioVenta">Precio de Venta (*)</label>
                            <input type="text" class="form-control" id="txtPrecioVenta" required>
                        </div>

                        <div class="mb-0">
                            <label for="txtEspecificacion" class="form-label" id="lblEspecificacion">Especificación</label>
                            <input type="text" class="form-control" id="txtEspecificacion">
                        </div>
                    </div>
                </form>

            </div>

            <div class="modal-footer modal-footer-cc">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" id="btnGuardar" class="btn btn-warning" onclick="guardarCambios()">Registrar</button>
            </div>
        </div>
    </div>
</div>

<partial name="~/Views/Utils/Modals.cshtml" />

@section Scripts {
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <!-- DataTables + extensiones -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/fixedheader/3.2.2/js/dataTables.fixedHeader.min.js"></script>

    <!-- Export deps -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>

    <!-- Select2 -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>

    <!-- Utilidades -->
    <script src="~/js/site.js"></script>
    <script src="~/js/utils/moment.js"></script>

    <!-- Lógica de Insumos -->
    <script src="~/js/Insumos.js?v=1.8"></script>
}
