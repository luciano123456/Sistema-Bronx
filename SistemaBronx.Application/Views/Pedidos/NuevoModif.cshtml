@{
    ViewBag.Title = "Nuevo Pedido";
}
<title>@ViewBag.Title</title>

<partial name="~/Views/Utils/Modals.cshtml" />

@section Estilos {
    
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/fixedheader/3.2.2/css/fixedHeader.dataTables.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />
    <!-- SKIN NUEVO XL -->
    <link href="~/css/PedidosNuevoModif.css" rel="stylesheet" />
    <link href="~/css/RedisenoPantallas.css" rel="stylesheet" />
}

<!-- KPI superior -->
<header class="cc-kpi cc-card cc-container-xxl">
    <div class="cc-kpi-icon"><i class="fa fa-file-text-o"></i></div>
    <div class="cc-kpi-text">
        <h1 id="tituloPedido" class="cc-kpi-title">Nuevo Pedido</h1>
        <p class="cc-muted m-0">Registro y edición de pedidos</p>
    </div>
    <button type="button" class="btn btn-outline-light ms-auto" onclick="window.location.href='/Pedidos'">
        <i class="fa fa-angle-left me-2"></i> Volver a Pedidos
    </button>
</header>

<img id="logoImpresion1" src="~/Imagenes/Logo2.png" style="display:none;" />
<img id="logoImpresion2" src="~/Imagenes/Logo3.png" style="display:none;" />

<main class="cc-container-xxl">

    <!-- Datos del pedido -->
    <section class="cc-section cc-card">
        <div class="cc-titlebar">
            <h3><i class="fa fa-list-ul me-2"></i> Datos del Pedido</h3>
        </div>

        <input type="text" id="IdPedido" name="IdPedido" hidden />

        <div class="cc-grid cc-grid-3xl">
            <div class="form-group">
                <label for="Fecha">Fecha</label>
                <input type="date" class="form-control" id="Fecha" name="Fecha">
            </div>

            <div class="form-group">
                <label class="lblfiltro">Cliente</label>
                <div class="d-flex align-items-center gap-2">
                    <select id="Clientes" name="select" class="form-control" style="flex:1">
                        <option value="" selected>Cliente</option>
                    </select>
                    <button type="button" class="btn btn-success" onclick="nuevoCliente()">
                        <i class="fa fa-plus"></i>
                    </button>
                </div>
            </div>

            <div class="form-group">
                <label for="Telefono">Teléfono</label>
                <input type="text" class="form-control" id="Telefono" name="Telefono" disabled>
            </div>
        </div>
    </section>

    <!-- Tabs -->
    <ul class="nav nav-tabs cc-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link active" id="productos-tab" data-bs-toggle="tab" href="#productos" role="tab">Productos</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="insumos-tab" data-bs-toggle="tab" href="#insumos" role="tab">Procesos e Insumos</a>
        </li>
    </ul>

    <div class="tab-content" id="myTabContent">

        <!-- Productos -->
        <section class="tab-pane fade show active" id="productos" role="tabpanel" aria-labelledby="productos-tab">
            <div class="cc-section cc-card">
                <div class="cc-titlebar">
                    <h3><i class="fa fa-cubes me-2"></i> Productos</h3>
                    <div class="d-flex gap-2">
                        <button class="btn btn-secondary dropdown-toggle" type="button"
                                id="dropdownColumnasProductos" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-cog me-2"></i> Config. Columnas
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownColumnasProductos" id="configColumnasMenuProductos"></ul>

                        <button type="button" class="btn btn-primary" onclick="anadirProducto()">
                            <i class="fa fa-plus me-1"></i> Añadir
                        </button>
                    </div>
                </div>

                <div class="cc-table">
                    <table id="grd_Productos" class="display nowrap table w-100">
                        <thead>
                            <tr>
                                <th hidden>Id Producto</th>
                                <th>Nombre</th>
                                <th hidden>Id Categoria</th>
                                <th>Categoria</th>
                                <th>Cantidad</th>
                                <th>Porc. Ganancia</th>
                                <th>Ganancia</th>
                                <th>Porc. IVA</th>
                                <th>IVA</th>
                                <th>Precio Venta U.</th>
                                <th>Precio Venta</th>
                                <th hidden>Id Color</th>
                                <th>Color</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>

                
            </div>
        </section>

        <!-- Insumos -->
        <section class="tab-pane fade" id="insumos" role="tabpanel" aria-labelledby="insumos-tab">
            <div class="cc-section cc-card">
                <div class="cc-titlebar">
                    <h3><i class="fa fa-cogs me-2"></i> Insumos</h3>
                    <div class="d-flex gap-2">
                        <button class="btn btn-secondary dropdown-toggle" type="button"
                                id="dropdownColumnasInsumos" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-cog me-2"></i> Config. Columnas
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownColumnas" id="configColumnasMenuInsumos"></ul>
                    </div>
                </div>

                <div class="cc-table">
                    <table id="grd_Insumos" class="display nowrap table w-100">
                        <thead>
                            <tr>
                                <th>Detalle</th>
                                <th hidden>Id Producto</th>
                                <th>Producto</th>
                                <th>Cantidad</th>
                                <th>PrecioUnitario</th>
                                <th>SubTotal</th>
                                <th hidden>IdInsumo</th>
                                <th>Insumo</th>
                                <th hidden>IdTipo</th>
                                <th>Tipo</th>
                                <th hidden>IdCategoria</th>
                                <th>Categoria</th>
                                <th hidden>IdColor</th>
                                <th>Color</th>
                                <th>Especificacion</th>
                                <th>Comentarios</th>
                                <th hidden>IdEstado</th>
                                <th>Estado</th>
                                <th>Proveedor</th>
                                <th>Fecha Actualizacion</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </section>

        <!-- Resumen / Datos Generales -->
        <section class="cc-section cc-card">
            <div class="cc-titlebar">
                <h3><i class="fa fa-gauge me-2"></i> Datos Generales</h3>
            </div>

            <div class="cc-grid cc-grid-3wide">
                <div class="form-group">
                    <label for="ImporteTotal">Importe Total</label>
                    <input type="text" class="form-control cc-money" id="ImporteTotal" name="ImporteTotal" disabled>
                </div>

                <div class="form-group">
                    <label for="PorcDesc">% Desc.</label>
                    <input type="number" class="form-control" id="PorcDesc" name="PorcDesc">
                </div>

                <div class="form-group">
                    <label for="Descuento">Descuento</label>
                    <input type="text" class="form-control cc-money" id="Descuento" name="Descuento" disabled>
                </div>

                <div class="form-group">
                    <label for="SubTotal">Sub Total</label>
                    <input type="text" class="form-control cc-money" id="SubTotal" name="Subtotal" disabled>
                </div>

                <div class="form-group">
                    <label for="ImporteAbonado">Importe Abonado</label>
                    <input type="text" class="form-control cc-money" id="ImporteAbonado" name="ImporteAbonado">
                </div>

                <div class="form-group">
                    <label for="Saldo">Saldo</label>
                    <input type="text" class="form-control cc-money" id="Saldo" name="Saldo" disabled>
                </div>

                <div class="form-group">
                    <label class="lblfiltro">Forma de pago</label>
                    <select id="Formasdepago" name="select" class="form-control">
                        <option value="" selected>Forma de pago</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="Comentarios">Comentarios</label>
                    <input type="text" class="form-control" id="Comentarios" name="Comentarios">
                </div>

                <div class="form-group d-none" id="divNroFactura">
                    <label for="NroFactura">Nro. de Factura</label>
                    <input type="text" class="form-control" id="NroFactura" name="NroFactura">
                </div>
            </div>

            <div class="d-flex flex-wrap justify-content-between align-items-center mt-3">
                <div class="d-flex gap-4">
                    <label class="form-check form-switch d-flex align-items-center gap-2 m-0">
                        <input class="form-check-input" type="checkbox" id="Facturado" />
                        <span>Facturado</span>
                    </label>

                    <label class="form-check form-switch d-flex align-items-center gap-2 m-0">
                        <input class="form-check-input" type="checkbox" id="Finalizado" />
                        <span>Finalizado</span>
                    </label>
                </div>

                <div class="d-flex gap-2">
                    <button type="button" id="btnGenerarPdf" class="btn btn-danger" onclick="generarDatosPedidoPDF()">
                        <i class="fa fa-print me-1"></i> Imprimir PDF
                    </button>
                    <button type="button" id="btnGenerarPdf" class="btn btn-dark" onclick="generarDatosRemitoPDF()">
                        <i class="fa fa-print me-1"></i> Imprimir Remito
                    </button>
                    <button type="button" id="btnNuevoModificar" class="btn btn-primary" onclick="guardarCambios()">
                        <i class="fa fa-save me-1"></i> Registrar
                    </button>
                </div>
            </div>
        </section>
    </div>
</main>

<!-- MODAL NUEVO CLIENTE -->
<div class="modal fade" id="modalEdicionCliente" tabindex="-1" aria-labelledby="modalEdicionClienteLabel" aria-hidden="true">
    <div class="modal-dialog modal-3xl modal-dialog-centered">
        <div class="modal-content cc-modal">
            <div class="modal-header cc-modal-header">
                <h5 class="modal-title fw-bold" id="modalEdicionClienteLabel">Nuevo Cliente</h5>
                <button type="button" class="btn-close custom-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form id="formEditarCliente" class="row g-3">
                    <input type="text" id="txtIdClienteModal" hidden readonly>
                    <div class="col-md-6">
                        <label for="txtNombreClienteModal" class="form-label" id="lblNombreClienteModal">Nombre (*)</label>
                        <input type="text" class="form-control" id="txtNombreClienteModal" required>
                    </div>
                    <div class="col-md-3">
                        <label for="txtTelefonoClienteModal" class="form-label">Teléfono</label>
                        <input type="text" class="form-control" id="txtTelefonoClienteModal">
                    </div>
                    <div class="col-md-3">
                        <label for="txtDniClienteModal" class="form-label">DNI/CUIT</label>
                        <input type="text" class="form-control" id="txtDniClienteModal">
                    </div>
                    <div class="col-md-6">
                        <label for="txtDireccionClienteModal" class="form-label">Dirección</label>
                        <input type="text" class="form-control" id="txtDireccionClienteModal">
                    </div>
                    <div class="col-md-3">
                        <label for="ProvinciasClienteModal" class="form-label">Provincia</label>
                        <select id="ProvinciasClienteModal" name="select" class="form-control">
                            <option value="" selected>Provincias</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="txtLocalidadClienteModal" class="form-label">Localidad</label>
                        <input type="text" class="form-control" id="txtLocalidadClienteModal">
                    </div>
                    <div class="col-12">
                        <label for="txtComentariosClienteModal" class="form-label">Comentarios</label>
                        <input type="text" class="form-control" id="txtComentariosClienteModal">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" id="btnGuardarCliente" class="btn btn-warning" onclick="guardarCambiosCliente()">Registrar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="productoModal" tabindex="-1" aria-labelledby="productoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xxl modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content cc-modal">
            <div class="modal-header cc-modal-header">
                <h5 class="modal-title" id="productoModalLabel">Añadir Producto</h5>
                <button type="button" class="btn-close custom-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <!-- === TOP: DOS COLUMNAS === -->
                <div class="cc-modal-top">
                    <!-- IZQUIERDA: búsqueda + listado -->
                    <div class="cc-left">
                        <div class="cc-titlebar mb-3">
                            <h6 class="m-0">Búsqueda de productos</h6>
                        </div>

                        <div class="row g-2 mb-2">
                            <div class="col-12 col-lg-7">
                                <input type="text" id="busqueda" class="form-control" placeholder="Buscar producto">
                            </div>
                            <div class="col-12 col-lg-5">
                                <select id="Categorias" class="form-select"></select>
                            </div>
                        </div>

                        <!-- Listado de productos (más bajo) -->
                        <div class="cc-tablewrap lista-productos-height">
                            <table class="table table-hover table-sm mb-0" id="grd_Productos_Modal" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Descripción</th>
                                        <th>Categoría</th>
                                        <th>Precio venta</th>
                                        <th hidden>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>

                        <!-- Botonera debajo del listado -->
                        <div class="cc-actions-below-list">
                            <div class="d-flex justify-content-end gap-2 flex-wrap">
                                <button class="btn btn-success" id="btnGuardarProducto" onclick="guardarProducto()">
                                    <i class="fa fa-check me-1"></i> Añadir
                                </button>
                                <button class="btn btn-secondary" data-bs-dismiss="modal">
                                    <i class="fa fa-arrow-left me-1"></i> Volver
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- DERECHA: datos del producto (form compacto) -->
                    <div class="cc-right">
                        <div class="cc-titlebar mb-3">
                            <h6 class="m-0">Producto seleccionado</h6>
                        </div>

                        <!-- ids ocultos -->
                        <input type="text" class="form-control" id="ProductoModalId" hidden>
                        <input type="text" class="form-control" id="ProductoEditandoModalId" hidden>

                        <!-- Form en grid (ver CSS de grid-areas) -->
                        <div class="cc-form-grid cc-form-producto">
                            <div class="cc-field full field-nombre">
                                <label class="form-label">Nombre</label>
                                <input type="text" class="form-control" id="ProductoModalNombre">
                            </div>

                            <div class="cc-field field-categoria">
                                <label class="form-label">Categoría</label>
                                <input type="text" class="form-control" id="ProductoModalCategoria" disabled>
                                <input type="text" class="form-control" id="ProductoModalIdCategoria" hidden>
                            </div>

                            <div class="cc-field field-costo">
                                <label class="form-label">Costo Unitario</label>
                                <input type="text" class="form-control" id="ProductoModalCostoUnitario" disabled>
                            </div>

                            <div class="cc-field field-porcgan">
                                <label class="form-label">% Ganancia</label>
                                <input type="text" class="form-control" id="ProductoModalPorcGanancia">
                            </div>

                            <div class="cc-field field-ganancia">
                                <label class="form-label">Ganancia</label>
                                <input type="text" class="form-control" id="ProductoModalGanancia" disabled>
                            </div>

                            <div class="cc-field field-iva">
                                <label class="form-label">% IVA</label>
                                <input type="text" class="form-control" id="ProductoModalPorcIva">
                            </div>

                            <div class="cc-field field-totaliva">
                                <label class="form-label">Total IVA</label>
                                <input type="text" class="form-control" id="ProductoModalIva" disabled>
                            </div>

                            <div class="cc-field field-precio">
                                <label class="form-label">Precio de venta</label>
                                <input type="text" class="form-control text-success fw-bold" id="ProductoModalPrecioVenta" disabled>
                            </div>

                            <div class="cc-field field-cantidad">
                                <label class="form-label">Cantidad</label>
                                <input type="number" class="form-control" id="ProductoModalCantidad">
                            </div>

                            <div class="cc-field field-color">
                                <label class="form-label">Color</label>
                                <select id="Colores" class="form-select"></select>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- === BOTTOM: INSUMOS DEL PRODUCTO (más alto) === -->
                <div class="cc-insumos mt-3">
                    <div class="cc-titlebar mb-2">
                        <h6 class="m-0">Insumos del producto</h6>
                    </div>

                    <div class="cc-tablewrap lista-insumos-height">
                        <table class="table table-hover w-100 mb-0" id="grd_Insumos_Modal">
                            <thead>
                                <tr>
                                    <th>Descripción</th>
                                    <th>Cantidad</th>
                                    <th>PrecioUnitario</th>
                                    <th>SubTotal</th>
                                    <th hidden>IdCategoria</th>
                                    <th>Categoría</th>
                                    <th hidden>IdColor</th>
                                    <th>Color</th>
                                    <th hidden>IdEstado</th>
                                    <th>Estado</th>
                                    <th hidden>Tipo</th>
                                    <th>Tipo</th>
                                    <th>Especificacion</th>
                                    <th>Proveedor</th>
                                    <th>Comentarios</th>
                                    <th hidden>IdUnidadMedida</th>
                                    <th hidden>IdProveedor</th>
                                    <th hidden>IdProducto</th>
                                    <th hidden>IdInsumo</th>
                                    <th hidden></th>
                                    <th hidden>Cantidad Inicial</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>

                    <div class="d-flex justify-content-end mt-2">
                        <button id="btnEliminarInsumo" class="btn btn-danger">
                            <span aria-hidden="true">❌</span> Eliminar
                        </button>
                    </div>
                </div>
            </div>

            <div class="modal-footer d-none"></div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
    <script src="~/js/utils/moment.js"></script>
    <script src="~/js/pedidosnuevomodif.js?v=3.8"></script>
    <script src="~/js/site.js"></script>
}

<script>
    var pedidoData = @Html.Raw(Json.Serialize(ViewBag.Data ?? new { }));
</script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.2/jspdf.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.0/jspdf.plugin.autotable.min.js"></script>
