@{
    ViewData["Title"] = "Gastos";
}

@section Estilos {
    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/fixedheader/3.2.2/css/fixedHeader.dataTables.min.css" />

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />

    <!-- Base del proyecto (mismo tema) -->
    <link rel="stylesheet" href="~/css/usuarios.css" />
    <link rel="stylesheet" href="~/css/Gastos.css" />
    <link rel="stylesheet" href="~/css/redisenopantallas.css" />
   

    <!-- Select2 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
}

<div class="container page-99" style="margin-top: 100px">
    <!-- Header tipo KPI -->
    <div class="cc-header shadow-lg rounded-4 p-4 mb-4">
        <div class="d-flex align-items-center gap-3 flex-wrap">
            <div class="d-flex align-items-center gap-3">
                <span class="cc-badge"><i class="fa fa-credit-card"></i></span>
                <div>
                    <h2 class="m-0 fw-800">Gastos</h2>
                    <small class="text-muted-cc">Listado y sumatorias del período</small>
                </div>
            </div>

            <!-- KPIs -->
            <div class="ms-auto d-flex gap-3 flex-wrap">
                <div class="cc-stat"><div class="label">Cantidad</div><div class="value" id="kpiCantGastos">0</div></div>
                <div class="cc-stat"><div class="label">Importe Total</div><div class="value" id="kpiImporteTotalG">0,00</div></div>
                <div class="cc-stat d-none d-md-block"><div class="label">Abonado</div><div class="value" id="kpiAbonadoG">0,00</div></div>
                <div class="cc-stat d-none d-md-block"><div class="label">Saldo</div><div class="value kpi-azul" id="kpiSaldoG">0,00</div></div>
            </div>
        </div>
    </div>

    <!-- Tabla + Filtros -->
    <div class="row g-4">
        <div class="col-12">
            <div class="card-glass p-3">
                <div class="tabla-wrap position-relative">

                    <!-- Controles top -->
                    <div class="tabla-controls-top d-flex gap-2 flex-wrap align-items-center">
                        <button class="btn btn-success d-flex align-items-center px-3 py-2" onclick="nuevoGasto()">
                            <i class="fa fa-plus-square me-2"></i> Nuevo Gasto
                        </button>

                        <!-- Toggle de filtros (si querés ocultar/mostrar como en Pedidos) -->
                        <button class="btn btn-outline-primary d-flex align-items-center" type="button" id="btnToggleFiltrosG">
                            <i class="fa fa-arrow-up me-2" id="iconFiltrosG"></i> Filtros
                        </button>

                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle d-flex align-items-center" type="button" id="btnConfigColsG"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-cog me-2"></i> Config. Columnas
                            </button>
                            <ul class="dropdown-menu" id="configColumnasMenu" aria-labelledby="btnConfigColsG"></ul>
                        </div>
                    </div>

                    <!-- Panel de filtros (mismos IDs que ya usa tu JS) -->
                    <form id="formFiltrosGastos" class="filter-bar shadow-sm rounded-3 mb-3 p-3">
                        <div class="row g-2 align-items-end">
                            <div class="col-6 col-md-2">
                                <label for="txtFechaDesde" class="form-label">Fecha Desde</label>
                                <input type="date" class="form-control" id="txtFechaDesde">
                            </div>
                            <div class="col-6 col-md-2">
                                <label for="txtFechaHasta" class="form-label">Fecha Hasta</label>
                                <input type="date" class="form-control" id="txtFechaHasta">
                            </div>
                            <div class="col-12 col-md-3">
                                <label for="CategoriasFiltro" class="form-label">Categoría</label>
                                <select id="CategoriasFiltro" class="form-select">
                                    <option value="">Todas</option>
                                </select>
                            </div>
                            <div class="col-12 col-md-2">
                                <label for="FormasdePagoFiltro" class="form-label">Forma de Pago</label>
                                <select id="FormasdePagoFiltro" class="form-select">
                                    <option value="">Todas</option>
                                </select>
                            </div>

                            <div class="col-12 col-md-2 d-flex gap-2 mt-2 mt-md-0">
                                <button type="button" id="aplicarFiltros" class="btn btn-primary flex-fill" onclick="aplicarFiltrosGastos()">
                                    <i class="fa fa-search me-1"></i> Buscar
                                </button>

                                <button type="button" class="btn btn-outline-secondary" onclick="limpiarFiltrosGastos()">
                                    <i class="fa fa-eraser me-1"></i> Limpiar
                                </button>


                            </div>
                        </div>
                    </form>

                    <!-- DataTable -->
                    <div class="dt-dark-wrap">
                        <table class="dt-dark display nowrap compact" id="grd_Gastos" style="width:100%">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Fecha</th>
                                    <th>Categoria</th>
                                    <th>Forma de Pago</th>
                                    <th>Importe Total</th>
                                    <th>IVA</th>
                                    <th>Sub Total</th>
                                    <th>Importe Abonado</th>
                                    <th>Saldo</th>
                                    <th>Comentarios</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>

                </div><!-- /tabla-wrap -->
            </div><!-- /card-glass -->
        </div>
    </div>
</div>

<!-- ===== Modal Gastos (MISMO markup; sólo estilos del skin) ===== -->
<div class="modal fade" id="modalEdicion" tabindex="-1" role="dialog" aria-labelledby="modalEdicionLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-edicion" role="document">
        <div class="modal-content cc-modal">
            <div class="modal-header colorEncabezado">
                <h5 class="modal-title fw-bold" id="modalEdicionLabel">Editar Gasto</h5>
                <button type="button" class="btn-close custom-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <div class="modal-body">
                <form id="formEditarGasto" class="row g-3">
                    <input type="text" id="txtId" hidden readonly>

                    <div class="col-md-3">
                        <label for="txtFecha" class="form-label" id="lblNombre">Fecha (*)</label>
                        <input type="date" class="form-control" id="txtFecha" required>
                    </div>

                    <div class="col-md-3">
                        <label for="Categorias" class="form-label">Categoría</label>
                        <select id="Categorias" name="select" class="form-control">
                            <option value="" selected>Categoría</option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label for="FormasdePago" class="form-label">Forma de Pago</label>
                        <select id="FormasdePago" name="select" class="form-control">
                            <option value="" selected>Pago</option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label for="txtImporteTotal" class="form-label">Importe Bruto</label>
                        <input type="text" class="form-control" id="txtImporteTotal">
                    </div>

                    <div class="col-md-3">
                        <label for="txtPorcIva" class="form-label">Porc. Iva</label>
                        <input type="number" class="form-control" id="txtPorcIva">
                    </div>

                    <div class="col-md-3">
                        <label for="txtIva" class="form-label">IVA</label>
                        <input type="text" class="form-control" id="txtIva" disabled>
                    </div>

                    <div class="col-md-3">
                        <label for="txtSubtotalNeto" class="form-label">Importe Neto</label>
                        <input type="text" class="form-control" id="txtSubtotalNeto" disabled>
                    </div>

                    <div class="col-md-3">
                        <label for="txtImporteAbonado" class="form-label">Importe Abonado</label>
                        <input type="text" class="form-control" id="txtImporteAbonado">
                    </div>

                    <div class="col-md-3">
                        <label for="txtSaldo" class="form-label">Saldo</label>
                        <input type="text" class="form-control" id="txtSaldo" disabled>
                    </div>

                    <div class="col-9">
                        <label for="txtComentarios" class="form-label">Comentarios</label>
                        <input type="text" class="form-control" id="txtComentarios">
                    </div>
                </form>
            </div>

            <div class="modal-footer modal-footer-cc">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" id="btnGuardar" class="btn btn-warning" onclick="guardarCambios()">Registrar</button>
            </div>
        </div>
    </div>
</div>

<partial name="~/Views/Utils/Modals.cshtml" />

@section Scripts {
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <!-- DataTables + extensiones -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/fixedheader/3.2.2/js/dataTables.fixedHeader.min.js"></script>

    <!-- Export deps -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>

    <!-- Select2 -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>

    <!-- Utilidades -->
    <script src="~/js/site.js"></script>
    <script src="~/js/utils/moment.js"></script>

    <!-- Lógica -->
    <script src="~/js/Gastos.js?v=1.6"></script>

}
