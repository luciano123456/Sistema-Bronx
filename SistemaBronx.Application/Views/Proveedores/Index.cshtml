@{
    ViewData["Title"] = "Proveedores";
}

@section Estilos {
    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/fixedheader/3.2.2/css/fixedHeader.dataTables.min.css" />

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Tus estilos -->
    <link rel="stylesheet" href="~/css/redisenopantallas.css" />
    <link rel="stylesheet" href="~/css/proveedores.css" />
}

<div class="container page-99" style="margin-top: 100px">
    <!-- Header -->
    <div class="cc-header shadow-lg rounded-4 p-4 mb-4">
        <div class="d-flex align-items-center gap-3 flex-wrap">
            <div class="d-flex align-items-center gap-3">
                <span class="cc-badge"><i class="fa fa-truck"></i></span>
                <div>
                    <h2 class="m-0 fw-800">Proveedores</h2>
                    <small class="text-muted-cc">Listado y acciones rápidas</small>
                </div>
            </div>

            <!-- KPI -->
            <div class="ms-auto d-flex gap-3 flex-wrap">
                <div class="cc-stat">
                    <div class="label">Cantidad</div>
                    <div class="value" id="kpiCantProv">0</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla -->
    <div class="row g-4">
        <div class="col-12">
            <div class="card-glass p-3">
                <div class="tabla-wrap position-relative">

                    <!-- Controles superiores -->
                    <div class="tabla-controls-top d-flex gap-2 flex-wrap align-items-center mb-2">

                        
                        <button class="btn btn-success d-flex align-items-center px-3 py-2 ms-auto"
                                onclick="nuevoProveedor()">
                            <i class="fa fa-plus-square me-2"></i> Nuevo Proveedor
                        </button>

                        <div class="dropdown">

                            <button class="btn btn-secondary dropdown-toggle d-flex align-items-center" type="button"
                                    id="btnConfigColsProv" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-cog me-2"></i> Config. Columnas
                            </button>
                            <ul class="dropdown-menu" id="configColumnasMenu" aria-labelledby="btnConfigColsProv"></ul>
                        </div>

                    </div>

                    <!-- Tabla DataTable -->
                    <div class="dt-dark-wrap">
                        <table class="dt-dark display nowrap compact" id="grd_Proveedores" style="width:100%">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Nombre</th>
                                    <th>Apodo</th>
                                    <th>Cuit</th>
                                    <th>CBU</th>
                                    <th>Ubicación</th>
                                    <th>Teléfono</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>

                </div><!-- /tabla-wrap -->
            </div><!-- /card-glass -->
        </div>
    </div>
</div>

<!-- Modal Edición -->
<div class="modal fade" id="modalEdicion" tabindex="-1" role="dialog" aria-labelledby="modalEdicionLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-edicion" role="document">
        <div class="modal-content cc-modal">
            <div class="modal-header colorEncabezado">
                <h5 class="modal-title fw-bold" id="modalEdicionLabel">Editar Proveedor</h5>
                <button type="button" class="btn-close custom-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <div class="modal-body">
                <form id="formEditarProveedor" class="row g-3">
                    <input type="text" id="txtId" hidden readonly>

                    <div class="col-md-6">
                        <label for="txtNombre" class="form-label">Nombre (*)</label>
                        <input type="text" class="form-control" id="txtNombre" required>
                    </div>

                    <div class="col-md-6">
                        <label for="txtApodo" class="form-label">Apodo</label>
                        <input type="text" class="form-control" id="txtApodo">
                    </div>

                    <div class="col-md-6">
                        <label for="txtCuit" class="form-label">CUIT</label>
                        <input type="text" class="form-control" id="txtCuit">
                    </div>

                    <div class="col-md-6">
                        <label for="txtCbu" class="form-label">CBU</label>
                        <input type="text" class="form-control" id="txtCbu">
                    </div>

                    <div class="col-md-6">
                        <label for="txtUbicacion" class="form-label">Ubicación</label>
                        <input type="text" class="form-control" id="txtUbicacion">
                    </div>

                    <div class="col-md-6">
                        <label for="txtTelefono" class="form-label">Teléfono</label>
                        <input type="text" class="form-control" id="txtTelefono">
                    </div>
                </form>
            </div>

            <div class="modal-footer modal-footer-cc">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" id="btnGuardar" class="btn btn-warning" onclick="guardarCambios()">Guardar</button>
            </div>
        </div>
    </div>
</div>

<partial name="~/Views/Utils/Modals.cshtml" />

@section Scripts {
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <!-- DataTables -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/fixedheader/3.2.2/js/dataTables.fixedHeader.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>

    <!-- Utilidades -->
    <script src="~/js/utils/moment.js"></script>
    <script src="~/js/site.js"></script>

    <!-- JS principal -->
    <script src="~/js/Proveedores.js?v=2.0"></script>

}
