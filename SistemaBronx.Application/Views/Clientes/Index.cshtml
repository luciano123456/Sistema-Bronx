@{
    ViewData["Title"] = "Clientes";
}

@section Estilos {
    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/fixedheader/3.2.2/css/fixedHeader.dataTables.min.css" />

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />

    <!-- Estilos base proyecto -->
    <link rel="stylesheet" href="~/css/usuarios.css" />
    <link rel="stylesheet" href="~/css/redisenopantallas.css" />
    <link rel="stylesheet" href="~/css/Clientes.css?v=1.0" />

    <!-- Select2 (opcional, por si luego lo usás en Provincias) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />

}

<div class="container page-99" style="margin-top:100px">
    <!-- Header KPI -->
    <div class="cc-header shadow-lg rounded-4 p-4 mb-4">
        <div class="d-flex align-items-center gap-3 flex-wrap">
            <div class="d-flex align-items-center gap-3">
                <span class="cc-badge"><i class="fa fa-users"></i></span>
                <div>
                    <h2 class="m-0 fw-800">Clientes</h2>
                    <small class="text-muted-cc">Gestión y listado de clientes</small>
                </div>
            </div>

            <div class="ms-auto d-flex gap-3 flex-wrap">
                <div class="cc-stat">
                    <div class="label">Cantidad</div>
                    <div class="value" id="kpiCantClientes">0</div>
                </div>
            </div>
        </div>
    </div>


    <!-- Tabla -->
    <div class="row g-4">
        <div class="col-12">
            <div class="card-glass p-3">
                <div class="tabla-wrap position-relative">
                    <!-- Controles top -->
                    <div class="tabla-controls-top d-flex gap-2 flex-wrap align-items-center">

                        <button class="btn btn-success d-flex align-items-center px-3 py-2" onclick="nuevoCliente()">
                            <i class="fa fa-plus-square me-2"></i> Nuevo Cliente
                        </button>

                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle d-flex align-items-center" type="button"
                                    id="btnConfigColsClientes" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-cog me-2"></i> Config. Columnas
                            </button>
                            <ul class="dropdown-menu" id="configColumnasMenu" aria-labelledby="btnConfigColsClientes"></ul>
                        </div>
                    </div>

                    <!-- DataTable -->
                    <div class="dt-dark-wrap">
                        <table class="dt-dark display nowrap compact" id="grd_clientes" style="width:100%">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Nombre</th>
                                    <th>Telefono</th>
                                    <th>Direccion</th>
                                    <th>Provincia</th>
                                    <th>Localidad</th>
                                    <th>DNI/CUIT</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>

                </div><!-- /tabla-wrap -->

               
            </div><!-- /card-glass -->
        </div>
    </div>
</div>

<!-- Modal Clientes -->
<!-- Modal Clientes -->
<div class="modal fade" id="modalEdicion" tabindex="-1" aria-labelledby="modalEdicionLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-edicion">
        <div class="modal-content cc-modal">
            <div class="modal-header colorEncabezado">
                <h5 class="modal-title fw-bold" id="modalEdicionLabel">Editar Cliente</h5>
                <button type="button" class="btn-close custom-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <div class="modal-body">
                <form id="formEditarCliente" class="row g-3">
                    <input type="text" id="txtId" hidden readonly>

                    <div class="col-md-6">
                        <label for="txtNombre" class="form-label" id="lblNombre">Nombre (*)</label>
                        <input type="text" class="form-control" id="txtNombre" required>
                    </div>

                    <div class="col-md-6">
                        <label for="txtTelefono" class="form-label">Teléfono</label>
                        <input type="text" class="form-control" id="txtTelefono">
                    </div>

                    <div class="col-md-6">
                        <label for="txtDireccion" class="form-label">Dirección</label>
                        <input type="text" class="form-control" id="txtDireccion">
                    </div>

                    <div class="col-md-6">
                        <label for="Provincias" class="form-label">Provincia</label>
                        <select id="Provincias" class="form-select">
                            <option value="" selected>Provincias</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label for="txtLocalidad" class="form-label">Localidad</label>
                        <input type="text" class="form-control" id="txtLocalidad">
                    </div>

                    <div class="col-md-6">
                        <label for="txtDni" class="form-label">DNI/CUIT</label>
                        <input type="text" class="form-control" id="txtDni">
                    </div>
                </form>
            </div>

            <div class="modal-footer modal-footer-cc">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" id="btnGuardar" class="btn btn-warning" onclick="guardarCambios()">Guardar</button>
            </div>
        </div>
    </div>
</div>

<partial name="~/Views/Utils/Modals.cshtml" />

@section Scripts {
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <!-- DataTables + extensiones -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/fixedheader/3.2.2/js/dataTables.fixedHeader.min.js"></script>

    <!-- Export deps -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>

    <!-- Select2 (opcional para Provincias) -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>

    <!-- Utilidades base -->
    <script src="~/js/site.js"></script>
    <script src="~/js/utils/moment.js"></script>

    <!-- Lógica de la vista -->
    <script src="~/js/clientes.js?v=1.8"></script>

    <script>
        // Si usás Select2 en Provincias dentro del modal:
        $(function () {
            if ($('#Provincias').length) {
                $('#Provincias').select2({
                    placeholder: 'Seleccionar...',
                    dropdownParent: $('#modalEdicion'),
                    width: '100%'
                });
            }
        });
    </script>
}
